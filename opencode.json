{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "pnpm *": "allow",
      "grep *": "allow",
      "find *": "allow",
      "cd *": "allow",
      "ls *": "allow",
      "head *": "allow",
      "cat *": "allow",
      "rg *": "allow"
    }
  },
  "mcp": {
    "nuxt-ui": {
      "type": "remote",
      "url": "https://ui.nuxt.com/mcp",
      "enabled": true
    },
    "nuxt": {
      "type": "remote",
      "url": "https://nuxt.com/mcp",
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "YOUR_API_KEY"
      },
      "enabled": true
    }
  },
  "formatter": {
    "eslint": {
      "command": [
        "eslint",
        "--fix",
        "$FILE"
      ],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".md",
        ".vue"
      ]
    }
  },
  "experimental": {
    "disable_paste_summary": true
  }
}
