{
  "servers": {
    "nuxt-ui": {
      "type": "http",
      "url": "https://ui.nuxt.com/mcp"
    },
    "nuxt": {
      "type": "http",
      "url": "https://nuxt.com/mcp"
    },
    "context7": {
      "type": "http",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${input:context7-key}"
      }
    }
  },
  "inputs": [
    {
      "type": "promptString",
      "id": "context7-key",
      "description": "Context7 API Key",
      "password": true
    }
  ]
}
